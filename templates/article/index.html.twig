{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Article index</h1>
        <div class="d-flex" style="gap: 3%">
            {% for article in articles %}
                <div class="col-sm-8 col-md-6 col-lg-4">
                    {% include 'article/_card.html.twig' %}
                </div>
            {% else %}
                <h2>Empty</h2>
            {% endfor %}

        </div>
        <a class="btn btn-primary mt-2" href="{{ path('app_article_new') }}">Create new</a>
    </div>

{% endblock %}
