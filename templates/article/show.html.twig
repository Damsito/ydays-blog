{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
        <h1>Article</h1>
        <div class="d-flex justify-content-evenly">
            <div class="col-sm-8 col-md-6 col-lg-4">

                {% include 'article/_card.html.twig' with {'show': true} %}
            </div>
        </div>
    </div>
    <div class="d-flex">
        <h1>Commentaires : </h1>
        <a href="{{ path('app_comment_new', {id: article.id}) }}" class="btn btn-primary ms-auto">Commenter</a>
    </div>
    {% for comment in article.comments %}
        <p>{{ comment.texte }}</p>
    {% endfor %}
    <div class="d-flex">
        <a class="btn btn-secondary" href="{{ path('app_article_index') }}">back to list</a>
    </div>
{% endblock %}
